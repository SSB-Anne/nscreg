  "engines": {
    "node": ">=6.9",
    "npm": ">=3.10"
  },
  "scripts": {
    "eslint": "eslint client client.test start.js webpack.config.js",
    "stylelint": "stylelint \"client/components/**/*.sss\" \"client/views/**/*.sss\"",
    "lint": "run-p eslint stylelint",
    "test": "",
    "test:watch": "",
    "clean": "node start clean",
    "clean:packages": "node start clean --packages",
    "build": "node start build",
    "build:debug": "node start build --debug",
    "publish": "node start publish",
    "publish:debug": "node start publish --debug",
    "start": "node start"
  },
  "repository": {
    "type": "git",
    "url": "http://ci2.timelysoft.org:8080/tfs/defaultcollection/_git/nscreg"
  },
  "dependencies": {
    "babel-polyfill": "^6.16.0",
    "isomorphic-fetch": "^2.2.1",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-helmet": "^3.1.0",
    "react-modal": "^1.5.2",
    "react-redux": "^5.0.0-beta.3",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.6",
    "redux": "^3.6.0",
    "redux-act": "^1.1.0",
    "redux-thunk": "^2.1.0"
