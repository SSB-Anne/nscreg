{
  "name": "nscreg",
  "author": "TimelySoft LLC",
  "description": "nscreg clinet scripts",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=6.9",
    "npm": ">=3.10"
  },
  "scripts": {
    "postinstall": "dotnet restore nscreg.Server nscreg.Server.Test",
    "eslint": "eslint client client.test run.js webpack.config.js",
    "stylelint": "stylelint \"client/components/**/*.pcss\" \"client/pages/**/*.pcss\"",
    "lint": "run-p eslint stylelint",
    "test": "",
    "test:watch": "",
    "clean": "node run clean",
    "build": "node run build",
    "build:debug": "node run build --debug",
    "start": "node run"
  },
  "repository": {
    "type": "git",
    "url": "http://ci2.timelysoft.org:8080/tfs/defaultcollection/_git/nscreg"
  },
  "dependencies": {
    "babel-polyfill": "^6.16.0",
    "fastclick": "1.0.6",
    "isomorphic-fetch": "^2.2.1",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-helmet": "^3.2.2",
    "react-modal": "^1.5.2",
    "react-redux": "^5.0.0-beta.3",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.6",
    "redux": "^3.6.0",
    "redux-act": "^1.1.0",
    "redux-thunk": "^2.1.0",
    "semantic-ui-react": "^0.61.4"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.8",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-object-rest-spread": "^6.19.0",
    "babel-plugin-transform-react-constant-elements": "^6.9.1",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "browser-sync": "^2.18.1",
    "cpy": "^4.0.1",
    "cross-env": "^3.1.3",
    "css-loader": "^0.26.0",
    "del": "^2.2.2",
    "eslint": "^3.10.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-fetch": "0.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.7.1",
    "eventsource-polyfill": "^0.9.6",
    "file-loader": "^0.9.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^3.1.1",
    "postcss": "^5.2.6",
    "postcss-cssnext": "^2.8.0",
    "postcss-easy-import": "^1.0.1",
    "postcss-flexibility": "^1.1.0",
    "postcss-import": "^8.1.0",
    "postcss-loader": "^1.1.1",
    "postcss-nested-props": "^1.1.1",
    "precss": "^1.4.0",
    "react-hot-loader": "^3.0.0-beta.2",
    "style-loader": "^0.13.1",
    "stylelint": "^7.6.0",
    "stylelint-config-css-modules": "^0.1.0",
    "stylelint-config-standard": "^15.0.0",
    "sugarss": "^0.2.0",
    "url-loader": "^0.5.7",
    "webpack": "^2.1.0-beta.27",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.2"
  },
  "babel": {
    "plugins": [
      "transform-class-properties",
      "transform-object-rest-spread"
    ],
    "presets": [
      [
        "latest",
        {
          "es2015": {
            "modules": false
          }
        }
      ],
      "react"
    ]
  },
  "postcss": {
    "parser": "sugarss",
    "plugins": {
      "postcss-import": {},
      "postcss-easy-import": {
        "extensions": [
          ".pcss"
        ]
      },
      "precss": {},
      "postcss-cssnext": {},
      "postcss-flexibility": {},
      "postcss-nested-props": {}
    }
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": "airbnb",
    "parser": "babel-eslint",
    "plugins": [
      "babel",
      "fetch",
      "jsx-a11y",
      "import",
      "react"
    ],
    "rules": {
      "import/no-extraneous-dependencies": 0,
      "linebreak-style": [
        2,
        "windows"
      ],
      "no-confusing-arrow": 0,
      "no-nested-ternary": 0,
      "no-plusplus": 0,
      "semi": [
        2,
        "never"
      ]
    },
    "settings": {
      "import/resolver": "webpack"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-css-modules",
      "stylelint-config-standard"
    ],
    "rules": {
      "declaration-block-trailing-semicolon": null,
      "string-quotes": "single"
    }
  }
}
